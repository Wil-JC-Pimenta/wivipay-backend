        "clientRole": false,
        "attributes": {}
      },
      {
        "name": "user",
        "description": "Usuário regular",
        "composite": false,
        "clientRole": false,
        "attributes": {}
      }
    ]
  },
  "clients": [
    {
      "clientId": "gateway-client",
      "enabled": true,
      "publicClient": false,
      "clientAuthenticatorType": "client-secret",
      "secret": "gateway-secret-key-2024",
      "redirectUris": [
        "http://localhost:8080/*",
        "http://localhost:8180/*",
        "http://localhost:3000/*"
      ],
      "webOrigins": [
        "http://localhost:8080",
        "http://localhost:3000",
        "+"
      ],
      "standardFlowEnabled": true,
      "directAccessGrantsEnabled": true,
      "serviceAccountsEnabled": true,
      "authorizationServicesEnabled": true,
      "attributes": {
        "saml.assertion.signature": "false",
        "saml.force.post.binding": "false",
        "saml.multivalued.roles": "false",
        "saml.encrypt": "false",
        "saml.server.signature": "false",
        "saml.server.signature.keyinfo.ext": "false",
        "exclude.session.state.from.auth.response": "false",
        "saml_force_name_id_format": "false",
        "saml.client.signature": "false",
        "tls.client.certificate.bound.access.tokens": "false",
        "saml.authnstatement": "false",
        "display.on.consent.screen": "false",
        "saml.onetimeuse.condition": "false"
      },
      "clientRoles": [
        {
          "name": "payments:read",
          "description": "Permissão para consultar pagamentos"
        },
        {
          "name": "payments:write",
          "description": "Permissão para criar, atualizar e deletar pagamentos"
        },
        {
          "name": "customers:read",
          "description": "Permissão para consultar clientes"
        },
        {
          "name": "customers:write",
          "description": "Permissão para criar, atualizar e deletar clientes"
        },
        {
          "name": "credit_cards:read",
          "description": "Permissão para consultar cartões de crédito"
        },
        {
          "name": "credit_cards:write",
          "description": "Permissão para criar, atualizar e deletar cartões de crédito"
        },
        {
          "name": "transactions:read",
          "description": "Permissão para consultar logs de transações"
        }
      ],
      "protocolMappers": [
        {
          "name": "realm roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-realm-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "userinfo.response.claim": "true",
            "claim.name": "realm_access.roles",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        },
        {
          "name": "client roles",
          "protocol": "openid-connect",
          "protocolMapper": "oidc-usermodel-client-role-mapper",
          "config": {
            "multivalued": "true",
            "userinfo.token.claim": "true",
            "userinfo.response.claim": "true",
            "claim.name": "resource_access.gateway-client.roles",
            "jsonType.label": "String",
            "id.token.claim": "true",
            "access.token.claim": "true"
          }
        }
      ]
    }
  ],
  "groups": [
    {
      "name": "Administrators",
